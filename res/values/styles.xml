<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
  <style name="AppBaseTheme" parent="android:Theme.Light">
<!-- 
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        

  --> 
  </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
<style name="CustomWindowTitleBackground">
       <item name="android:background">#00000000</item>
</style>


<style name="title" parent="android:Theme">
     <item name="android:windowTitleSize">50dp</item>
     <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
</style>

   <style name="main_tab_bottom">
        <item name="android:textSize">10.0dip</item>
        <item name="android:textColor">#000000</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/home_btn_bg</item>
        <item name="android:paddingTop">1.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">1.0dip</item>
        <item name="android:layout_weight">1.0</item>
</style>
<style name="newsstyle">
    <item name="android:textColor">#00000000</item>

    </style>
<style name="radioButtonStyle"> 
<item name="android:button">@null</item> 
<item name="android:textSize">20sp</item> 
<item name="android:gravity">center_horizontal|bottom</item> 
<item name="android:paddingBottom">5dip</item> 
</style> 

   <!-- 主框架文字样式 -->
    <style name="tabhost_item_text_style">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:ellipsize">marquee</item>       
        <item name="android:singleLine">true</item>
    </style>
    
    <!-- 主框架的背景设置 无背景色 -->
    <style name="tabhost_item_background">
    	<item name="android:textAppearance">@style/tabhost_item_text_style</item>   	
        <item name="android:gravity">center_horizontal|top</item> 
        <item name="android:background">@drawable/tabhost_selector_background2</item> 
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>         
        <item name="android:drawablePadding">1.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    <!-- 个人云，人人云,娱乐里面的框架背景设置 -->
    <style name="tabhost_item_background2">
    	<item name="android:textAppearance">@style/tabhost_item_text_style</item>   	
        <item name="android:gravity">center_horizontal|top</item> 
        <item name="android:background">@drawable/tabhost_selector_background2</item> 
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>         
        <item name="android:drawablePadding">2.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    
    <style name="set_infomation_table_text" parent="android:Widget.TextView">
       <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">20.0dip</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#1E1E1E</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:maxLength">5</item>
        <item name="android:ems">5</item>
    </style>
    
    <style name="set_infomation_table_text_value" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">20.0dip</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:clickable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#7E7E7E</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:maxLength">18</item>
        <item name="android:ems">18</item>
    </style>
    
    <style name="chat_text_date_style">
	    <item name="android:padding">2dp</item>    
		<item name="android:textColor">#bfbfbf</item>   
		<item name="android:textSize">12sp</item>      
		<item name="android:background">#ffffff</item> 
	</style>
  
	     
	<style name="chat_content_date_style">
	    <item name="android:minHeight">50dp</item>
	    <item name="android:gravity">left|center</item>    
		<item name="android:textColor">#000000</item>   
		<item name="android:textSize">15sp</item>      
		<item name="android:lineSpacingExtra">2dp</item>   
		<item name="android:clickable">true</item>   
		<item name="android:focusable">true</item>   
		<item name="android:background">#bfbfbf</item> 
	</style>	 
	
	<style name="chat_text_name_style">  
		<item name="android:textColor">#818181</item>   
		<item name="android:textSize">15sp</item>      
		<item name="android:gravity">center</item> 
	</style>






</resources>
